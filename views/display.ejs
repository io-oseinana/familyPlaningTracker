<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/assets/css/media.css">
    <link rel="stylesheet" href="/public/assets/css/mediaforms.css">
  </head>
  <body>
    <%- include('partials/navbar') %>
    <div class="container-fluid">
      <nav class="navbar bg-body-tertiary m-5" style="background-color: white;">
        <div class="container-fluid">
          <div class="row" style="margin-top: 50px;" id="row">       
            <div class="col-4" id="col3">
                <form class="d-flex" role="search" action="/fname" method="post">
                    <input class="form-control me-2" type="search" placeholder="Search by Client Name" aria-label="Search" name="NameSearch" style="width: 30rem;">
                    <button class="btn btn-outline-success" type="submit" style="font-family: Verdana, Geneva, Tahoma, sans-serif;" >Search</button>
                  </form>
            </div>
            <div class="col-4" id="col3">
                <form class="d-flex" role="search" action="/fmobile" method="post">
                    <input class="form-control me-2" type="search" placeholder="Search by Mobile No." aria-label="Search" name="Mobilesearch" style="width: 30rem;">
                    <button class="btn btn-outline-success" type="submit" >Search</button>
                  </form>
            </div>
            <div class="col-4" id="col3">
                <form class="d-flex" role="search" action="/freg" method="post">
                    <input class="form-control me-2" type="search" placeholder="Search by Client Registration No" aria-label="Search" name="Regsearch" style="width: 30rem;">
                    <button class="btn btn-outline-success" type="submit" >Search</button>
                  </form>
            </div>
        </div>
        </div>
      </nav>
      <%  Count.forEach(function(data) { %>
        <span  style="font-family: Verdana, Geneva, Tahoma, sans-serif;font-size: larger;background-color: darkgoldenrod;"><span style="font-family: Verdana, Geneva, Tahoma, sans-serif;">Total Count:<%= data.count %></span></span>
        <% }); %>
      <div class="container-fluid">
        <table class="table table-hover table-white">
          <thead class="thead-dark" style="background-color:white;color: rgb(224, 98, 25);">
            
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Patients Name</th>
          <th scope="col">Contact</th>
          <th id="hide" scope="col">Client ID</th>
          <th id="hide" scope="col">Date</th>
          <th id="hide" scope="col">Facility</th>
          <th id="hide" scope="col">FP Service</th>
          <th id="hide" scope="col">Commodity</th>
          <th id="hide" scope="col">N-Visit Date</th>
          <th  scope="col">Delete</th>
          <th scope="col">Details</th>
        </tr>
      </thead>
      <tbody>
         <%  Data.forEach(function(data) { %> 
        <tr>
          <td id="show"><%= data.id %></td>
          <td id="show"><%= data.pdata %></td>
          <td id="show"><%= data.clientnumber %></td>
          <td id="hide"><%= data.RegNo %></td>
          <td id="hide"><%= data.Date %></td>
          <td id="hide"><%= data.Facility %></td>
          <td id="hide"><%= data.serve %></td>
          <td id="hide"><%= data.commodity %></td>
          <td id="hide"><%= data.visit %></td>

          <td><a href="/delete?id=<%=data.id %>"><button class="btn btn-danger" onclick="return confirm('do you want to delete records?')">delete</button></a></td>
          <td><a href="/edit?id=<%=data.id %>"><button class="btn btn-primary">View</button></a></td>
     
        </tr>
         <% }); %>
      </tbody>
    </table>
  </div>
  </div>
  
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
  </body>
</html>