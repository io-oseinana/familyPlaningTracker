<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/assets/css/mediaforms.css">
    <link rel="stylesheet" href="/public/assets/css/media.css">
  </head>
  <body>
    <%- include('partials/navbar') %>
    <div class="container-fluid">    
      <nav class="navbar m-5">
        <div class="container-fluid" style="margin-top: 50px;">  
            <div class="row" id="row">       
                <div class="col-4" id="col5" >
                    <form class="d-flex" role="search" action="/vp" method="post">
                        <input class="form-control me-2" type="search" placeholder="Search by Client Name" aria-label="Search" name="NameSearch" style="width: 30rem;">
                        <button class="btn btn-outline-success" type="submit" style="font-family: Verdana, Geneva, Tahoma, sans-serif;" >Search</button>
                      </form>
                </div>
                <div class="col-4" id="col5">
                    <form class="d-flex" role="search" action="/pview" method="post">
                        <input class="form-control me-2" type="search" placeholder="Search by Mobile No." aria-label="Search" name="Mobilesearch" style="width: 30rem;">
                        <button class="btn btn-outline-success" type="submit" >Search</button>
                      </form>
                </div>
                <div class="col-4" id="col5">
                    <form class="d-flex" role="search" action="/regno" method="post">
                        <input class="form-control me-2" type="search" placeholder="Search by Client Registration No" aria-label="Search" name="Regsearch" style="width: 30rem;">
                        <button class="btn btn-outline-success" type="submit" >Search</button>
                      </form>
                </div>
            </div>

        </div>
      </nav>
      <%  Count.forEach(function(data) { %>
      <span  style="font-family: Verdana, Geneva, Tahoma, sans-serif;font-size: larger;background-color: darkgoldenrod;"><span style="font-family: Verdana, Geneva, Tahoma, sans-serif;">Total Count:<%= data.count %></span></span>
      <% }); %>
      <div class="container-fluid pagination">
        <table class="table table-hover table-white">
          <thead class="thead-dark" style="background-color:white;color: rgb(224, 98, 25);">
            
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Name</th>
          <th scope="col">Gender</th>
          <th id="hide"  scope="col">DOB</th>
          <th id="hide"  scope="col">Age</th>
          <th id="hide"  scope="col">Registration Number</th>
          <th id="hide" scope="col">NHIS Number</th>
          <th id="hide"  scope="col">Mobile No</th>
          <th id="hide" scope="col">Address</th>
          <th id="hide"  scope="col">Region</th>
          <th id="hide"  scope="col">District</th>
          <th id="hide"  scope="col">Facility</th>
          <th scope="col">Delete</th>
          <th scope="col">View</th>
        </tr>
      </thead>
      <tbody>
        <%  Data.forEach(function(data) { %> 
    <tr>
    <td><%= data.id %></td>
          <td><%= data.Name %></td>
          <td><%= data.Gender %></td>
          <td id="hide" ><%= data.Dob %></td>
          <td id="hide" ><%= data.Age %></td>
          <td id="hide" ><%= data.RegNo %></td>
          <td id="hide" ><%= data.NHIS %></td>
          <td id="hide" ><%= data.Tel %></td>
          <td id="hide" ><%= data.address %></td>
          <td id="hide" ><%= data.Region %></td>
          <td id="hide" ><%= data.District %></td>
          <td id="hide" ><%= data.Facility %></td>
          <td><a href="/pdelete?id=<%=data.id %>"><button class="btn btn-danger" onclick="return confirm('do you want to delete records?')">delete</button></a></td>
    <td><a href="/views?id=<%=data.id %>"><button class="btn btn-warning">View</button></a></td>     
    </tr>
    <% }); %>
      </tbody>
    </table>
  </div>
  </div>
  
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
  </body>
</html>